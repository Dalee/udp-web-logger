; editorconfig.org
; NB: order is necessary
root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 4

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2
